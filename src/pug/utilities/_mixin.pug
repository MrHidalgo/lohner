//- MIXIN :: START

include ./_mixin/_hamburger
include ./_mixin/_swiper
include ./_mixin/_modal

mixin mainSection(classMod, img, title, breadcrumbsArr)
  main#main.main(class!="main--" + classMod)
    .main__bg
      img(src!="img/" + img alt="")
    .main__wrapper
      if(classMod === 'home')
        .main__content
          h1.main__title.c-title.c-title--white.wow.animate__animated.animate__fadeInUp Voted Philadelphia’s
          p.main__subtitle.wow.animate__animated.animate__fadeInUp “Top Doc” for 13 Years Straight!
          .main__btn.c-btn__wrapper.c-btn__wrapper--center.wow.animate__animated.animate__fadeInUp
            a.c-btn.c-btn--white(href="#")
              span SCHEDULE A CONSULTATION
      else
        .main__content
          h1.main__title.c-title.c-title--white.wow.animate__animated.animate__fadeInUp!= title
          .main__breadcrumbs.wow.animate__animated.animate__fadeInUp
            each val, idx in breadcrumbsArr
              if(idx === breadcrumbsArr.length - 1)
                p!= val
              else
                a(href="#")!= val

//- MIXIN :: END
